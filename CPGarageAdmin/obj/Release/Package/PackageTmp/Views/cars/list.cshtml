@{
    ViewBag.Title = "list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="row form-group">
            <div class="col-9">
                <h4 class="card-title" style="margin-top: 15px;">Cars</h4>
            </div>
            <div class="col-1">
                <h6 class="" style="margin-top: 15px; text-align: end;">Filters</h6>
            </div>
            <div class="col-2 text-right">
                <select id="statusFilter" class="form-control">
                    <option value="">All</option>
                    <option value="1" selected>Active</option>
                    <option value="2">Deactive</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table" id="tblStudent">
                        <thead>
                            <tr>
                                <th scope="col">Registration #</th>
                                <th scope="col">Name</th>
                                <th scope="col">Make Name</th>
                                <th scope="col">Model Name</th>
                                <th scope="col">Year</th>
                                <th scope="col">Car Type</th>
                                <th scope="col">Status</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            bindDatatable();

            // Filter data on dropdown change
            $('#statusFilter').change(function () {
                $('#tblStudent').DataTable().ajax.reload();
            });
        });

        function bindDatatable() {
            $('#tblStudent').DataTable({
                "sAjaxSource": "/cars/GetData",
                "bServerSide": true,
                "bProcessing": true,
                "searching": true,
                "order": [[1, 'asc']],
                "language": {
                    "emptyTable": "No record found.",
                    "processing":
                        '<i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color:#2a2b2b;"></i><span class="sr-only">Loading...</span> '
                },
                "fnServerParams": function (aoData) {
                    // Pass the selected StatusID from the dropdown to the server
                    aoData.push({
                        "name": "statusID",
                        "value": $('#statusFilter').val()
                    });
                },
                "columns": [
                    {
                        "data": "RegistrationNo",
                        "autoWidth": true,
                        "searchable": true
                    }, {
                        "data": "Name",
                        "autoWidth": true,
                        "searchable": true
                    }, {
                        "data": "MakeName",
                        "autoWidth": true,
                        "searchable": true
                    }, {
                        "data": "ModelName",
                        "autoWidth": true,
                        "searchable": true
                    }, {
                        "data": "Year",
                        "autoWidth": true,
                        "searchable": true
                    }, {
                        "data": "CarTypeName",
                        "autoWidth": true,
                        "searchable": true
                    }, {
                        "data": function (row) {
                            return row.StatusID === 1 ? "Active" : "Deactive";
                        },
                        "autoWidth": true,
                        "searchable": true
                    }, {
                        "data": null,
                        "autoWidth": true,
                        "searchable": false,
                        "render": function (data, type, row) {
                            return '<a href="/cars/add?id=' + row.CarID + '"><i class="mdi mdi-account-edit" data-toggle="tooltip" data-placement="bottom" title="Edit Data" style="font-size:25px !important;"></i></a>';
                        }
                    }
                ]
            });
        }
    </script>
}

