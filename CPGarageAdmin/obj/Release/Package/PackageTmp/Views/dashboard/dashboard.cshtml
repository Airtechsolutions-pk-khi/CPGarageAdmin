<div class="row">
    <div class="col-md-6 col-lg-3 grid-margin stretch-card">
        <div class="card bg-gradient-danger text-white text-center" style="background: #FD8052">
            <div class="card-body" style="color:#FFFFFF">
                <h4 class="font-weight-normal">Total Transactions</h4>
                <h2 class="mb-0">@Model.TotalTransactions</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3 grid-margin stretch-card">
        <div class="card bg-gradient-warning text-white text-center" style="background: #D4F795 ">
            <div class="card-body" style="color: #1E1E1E ">
                <h4 class="font-weight-normal">Total Locations</h4>
                <h2 class="mb-0">@Model.TotalLocations</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3 grid-margin stretch-card">
        <div class="card bg-gradient-primary text-white text-center card-shadow-primary" style="background: #FD8052 ">
            <div class="card-body" style="color: #FFFFFF">
                <h4 class="font-weight-normal">Total Customers</h4>
                <h2 class="mb-0">@Model.TotalCustomers</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3 grid-margin stretch-card">
        <div class="card bg-gradient-info text-white text-center" style="background: #D4F795 ">
            <div class="card-body" style="color: #1E1E1E ">
                <h4 class="font-weight-normal">Total Subusers</h4>
                <h2 class="mb-0">@Model.TotalSubusers</h2>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-lg-3 grid-margin stretch-card">
        <div class="card bg-gradient-success text-white text-center" style="background: #D4F795 ">
            <div class="card-body" style="color: #1E1E1E ">
                <h4 class="font-weight-normal">Total Cars</h4>
                <h2 class="mb-0">@Model.TotalCars</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3 grid-margin stretch-card">
        <div class="card bg-gradient-secondary text-white text-center" style="background: #FD8052 ">
            <div class="card-body" style="color: #FFFFFF">
                <h4 class="font-weight-normal">Total Products</h4>
                <h2 class="mb-0">@Model.TotalProducts</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3 grid-margin stretch-card">
        <div class="card bg-gradient-dark text-white text-center" style="background: #D4F795 ">
            <div class="card-body" style="color: #1E1E1E ">
                <h4 class="font-weight-normal">Total Trial Customer</h4>
                <h2 class="mb-0">@Model.TotalTrialCustomer</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3 grid-margin stretch-card">
        <div class="card bg-gradient-danger text-white text-center" style="background: #FD8052 ">
            <div class="card-body" style="color: #FFFFFF">
                <h4 class="font-weight-normal">Total Professional Customer</h4>
                <h2 class="mb-0">@Model.TotalProfessionalCustomer</h2>
            </div>
        </div>
    </div>
</div>

