@{
    ViewBag.Title = "list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="row form-group">
            <div class="col-8">
                <h4 class="card-title">Cars</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table" id="tblStudent">
                        <thead>
                            <tr>
                                <th scope="col">Registration #</th>
                                <th scope="col">Name</th>
                                <th scope="col">Make Name</th>
                                <th scope="col">Model Name</th>
                                <th scope="col">Year</th>
                                <th scope="col">Car Type</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            bindDatatable();
        });

        function bindDatatable() {
            datatable = $('#tblStudent')
                .DataTable({
                    "sAjaxSource": "/cars/GetData",
                    "bServerSide": true,
                    "bProcessing": true,
                    "bSearchable": true,
                    "sSearch": true,
                    "order": [[1, 'asc']],
                    "language": {
                        "emptyTable": "No record found.",
                        "processing":
                            '<i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color:#2a2b2b;"></i><span class="sr-only">Loading...</span> '
                    },
                    "columns": [
                        {
                            "data": "RegistrationNo",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                            "data": "Name",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                            "data": "MakeName",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                            "data": "ModelName",
                            "autoWidth": true,
                            "searchable": true
                        }, {
                            "data": "Year",
                            "autoWidth": true,
                            "searchable": true
                        }, {
                            "data": "CarTypeName",
                            "autoWidth": true,
                            "searchable": true
                        }, {
                            // New column with the provided HTML snippet
                            "data": null,
                            "autoWidth": true,
                            "searchable": false,
                            "render": function (data, type, row) {
                                return '<a href="/cars/add?id=' + row.CarID + '&modelid=' + row.ModelID + '"><i class="mdi mdi-account-edit" data-toggle="tooltip" data-placement="bottom" title="Edit Data" style="font-size:25px !important;"></i></a>';
                            }
                        }
                    ]
                });
        }
    </script>
}
