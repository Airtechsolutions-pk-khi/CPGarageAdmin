@{
    ViewBag.Title = "list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="row form-group">
            <div class="col-8">
                <h4 class="card-title">Car Delete Request</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table" id="order-listing1">
                        <thead>
                            <tr>
                                <th scope="col">Request #</th>
                                <th scope="col">Car Name</th>
                                <th scope="col">Customer Name</th>
                                <th scope="col">Request From</th>
                                <th scope="col">Reason</th>
                                <th scope="col">Request Status</th>
                                <th class="text-center" scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DAL.Models.CarDeleteViewModel item in Model)
                            {
                                <tr>
                                    @*<td>1</td>
                                        <td>Mercedes</td>
                                        <td>test</td>
                                        <td>Android</td>
                                        <td>Wrong Information</td>
                                        <td><b class="badge badge-success">Accepted</b></td>*@
                                    <td>@item.RequestID</td>
                                    <td>@item.CarName</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.RequestFrom</td>
                                    <td>@item.Reason</td>
                                    <td>
                                        @if (item.RequestStatus == 1)
                                        {
                                            <b class="badge badge-warning">Pending</b>
                                        }
                                        else if (item.RequestStatus == 2)
                                        {
                                            <b class="badge badge-success">Accepted</b>
                                        }
                                        else
                                        {
                                            <b class="badge badge-danger">Rejected</b>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a href="~/carDelete/detail?id=@item.RequestID"><i class="mdi mdi-eye-plus" style="font-size:18px !important;" data-toggle="tooltip" data-placement="bottom" title="Accept"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#order-listing1').DataTable();
    });
</script>
